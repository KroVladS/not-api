generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Twit {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String
  email     String   @unique
  address   Address? @relation(fields: [addressId], references: [id])
  addressId Int?     @unique
  phone     String
  website   String
  company   Company? @relation(fields: [companyId], references: [id])
  companyId Int?     @unique
}

model Address {
  id      Int    @id @default(autoincrement())
  street  String
  suite   String
  city    String
  zipcode String
  geo     Geo?   @relation(fields: [geoId], references: [id])
  geoId   Int?   @unique
  user    User?
}

model Geo {
  id      Int      @id @default(autoincrement())
  lat     String
  lng     String
  address Address?
}

model Company {
  id          Int    @id @default(autoincrement())
  name        String
  catchPhrase String
  bs          String
  user        User?
}
